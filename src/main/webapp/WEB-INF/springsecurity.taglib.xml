<?xml version="1.0"?>
<!DOCTYPE facelet-taglib PUBLIC
        "-//Sun Microsystems, Inc.//DTD Facelet Taglib 1.0//EN"
        "http://java.sun.com/dtd/facelet-taglib_1_0.dtd">
<facelet-taglib>
    <namespace>http://www.springframework.org/security/facelets/tags</namespace>

    <function>
        <function-name>ifAnyGranted</function-name>
        <function-class>org.springframework.security.taglibs.facelets.SpringSecurityELLibrary</function-class>
        <function-signature>boolean ifAnyGranted(java.lang.String)</function-signature>
    </function>

    <function>
        <function-name>ifAllGranted</function-name>
        <function-class>org.springframework.security.taglibs.facelets.SpringSecurityELLibrary</function-class>
        <function-signature>boolean ifAllGranted(java.lang.String)</function-signature>
    </function>

    <function>
        <function-name>ifNotGranted</function-name>
        <function-class>org.springframework.security.taglibs.facelets.SpringSecurityELLibrary</function-class>
        <function-signature>boolean ifNotGranted(java.lang.String)</function-signature>
    </function>

    <function>
        <function-name>isAuthenticated</function-name>
        <function-class>org.springframework.security.taglibs.facelets.SpringSecurityELLibrary</function-class>
        <function-signature>boolean isAuthenticated()</function-signature>
    </function>

    <function>
        <function-name>isAnonymous</function-name>
        <function-class>org.springframework.security.taglibs.facelets.SpringSecurityELLibrary</function-class>
        <function-signature>boolean isAnonymous()</function-signature>
    </function>

    <function>
        <function-name>getUsername</function-name>
        <function-class>org.springframework.security.taglibs.facelets.SpringSecurityELLibrary</function-class>
        <function-signature>java.lang.String getUsername()</function-signature>
    </function>

    <function>
        <function-name>getUserDetails</function-name>
        <function-class>org.springframework.security.taglibs.facelets.SpringSecurityELLibrary</function-class>
        <function-signature>de.sharea.svnpad.dao.entities.User getUserDetails()</function-signature>
    </function>


    <tag>
        <tag-name>ifAnyGranted</tag-name>
        <component>
            <component-type>org.springframework.security.taglibs.facelets.IfAnyGrantedTag</component-type>
            <handler-class>org.springframework.security.taglibs.facelets.IfAnyGrantedTag</handler-class>
        </component>
    </tag>

    <tag>
        <tag-name>ifAllGranted</tag-name>
        <component>
            <component-type>org.springframework.security.taglibs.facelets.IfAllGrantedTag</component-type>
            <handler-class>org.springframework.security.taglibs.facelets.IfAllGrantedTag</handler-class>
        </component>
    </tag>

    <tag>
        <tag-name>ifNotGranted</tag-name>
        <component>
            <component-type>org.springframework.security.taglibs.facelets.IfNotGrantedTag</component-type>
            <handler-class>org.springframework.security.taglibs.facelets.IfNotGrantedTag</handler-class>
        </component>
    </tag>

    <tag>
        <tag-name>isAuthenticated</tag-name>
        <component>
            <component-type>org.springframework.security.taglibs.facelets.IsAuthenticatedTag</component-type>
            <handler-class>org.springframework.security.taglibs.facelets.IsAuthenticatedTag</handler-class>
        </component>
    </tag>

    <tag>
        <tag-name>isAnonymous</tag-name>
        <component>
            <component-type>org.springframework.security.taglibs.facelets.IsAnonymousTag</component-type>
            <handler-class>org.springframework.security.taglibs.facelets.IsAnonymousTag</handler-class>
        </component>
    </tag>

</facelet-taglib>