<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="openjsfdb" transaction-type="RESOURCE_LOCAL">
        <properties>
            <property name="hibernate.dialect" value="de.schulprojekt.model.SQLiteDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
            <property name="show_sql" value="true" />
            <property name="format_sql" value="true" />
            <property name="connection.driver_class" value="org.sqlite.JDBC" />
            <property name="connection.url" value="jdbc:sqlite:/home/patrick/test/rezepte.db" />
        </properties>
    </persistence-unit>

</persistence>
